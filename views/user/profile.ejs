
<% include ../partials/head.ejs %>
<body>
<% include ../partials/headercat.ejs %>
  <main>
  <div class="dashboard">
<div class="container" style="margin-top: 20px">
<div class="col s12 m6">
  <div class="card grey darken-2">
    <div class="card-content white-text">
      <span class="card-title center" style="margin-bottom: 20px">
        <%= profile.username %>
      </span>
      <p>Hello, my name is <%= profile.firstName %> <%= profile.lastName %><br />
        <%= profile.description %>
      </p>
    </div>
    <div class="card-tabs">
      <ul class="tabs tabs-fixed-width grey darken-1">
        <li class="tab"><a href="#test4">Skills</a></li>
        <li class="tab"><a class="active" href="#test5">Profile</a></li>
        <li class="tab"><a href="#test6">Email</a></li>
      </ul>
    </div>
    <div class="card-content grey darken-2">
      <div id="test4"><%= profile.skills %></div>
      <div id="test5"><a href="http://<%= profile.profile %>"><%= profile.profile %></a></div>
      <div id="test6"><a href="mailto:<%= profile.email %>"><%= profile.email %></a></div>
    </div>
  </div>
</div>
</div>

  <h3>Favorite Technologies:</h3>
  <div class="container" style="margin-top: 20px">
    <div class="col s12 m6">
      <div class="collection favorites">
        <% faves.forEach((fave) => { %>

          <a href="/technologies/<%= fave.id %>" class="collection-item">
            <%= fave.name %> - <%= fave.category_name.replace(/_/g, ' ') %>
          </a>

        <% }) %>
      </div>
    </div>
  </div>
  </main>
  <% include ../partials/jsdefaults.ejs %>
</body>
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
</html>
