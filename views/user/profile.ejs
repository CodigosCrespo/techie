<% include ../partials/head.ejs %>
<body>
<% include ../partials/headercat.ejs %>
  <main>
  <p>Hello, world! My name is <b><%= profile.username %></b></p>
  <p>Welcome to my profile, <b><%= user.username %></b></p>
  <p>About me:</p>
  <p>
      My Name: <%= profile.firstName %> <%= profile.lastName %><br />
      Contact me at: <%= profile.email %> <br />
      My Github: <%= profile.github %> <br />
      Toolbelt: <%= profile.skills %><br />
    </p>
    <p>Favorite Technologies:</p>
    <ul>
      <% faves.forEach((fave) => { %>
        <li><a href="/technologies/<%= fave.id %>">
          <%= fave.name %> - <%= fave.category_name.replace(/_/g, ' ') %>
        </a>
        </li>
      <% }) %>
    </ul>
  </main>
  <% include ../partials/jsdefaults.ejs %>
</body>
</html>
