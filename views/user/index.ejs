<% include ../partials/head.ejs %>
<body>
<div>
<ul>Temp Navbar:
  <li><a href="/">Back</a></li>
  <li><a href="/auth/logout">Logout</a></li>
</ul>
</div>
  <main>
    <ul>
      <li>
        <h2><%= user.username %>'s Profile</h2>
        <p>Name: <%= user.firstName %> <%= user.lastName %><br />
        Email: <%= user.email %> <br />
        Github: <%= user.github %> <br />
        Skills: <%= user.skills %><br />
        <h3>Favorite Technologies:</h3>
        <ul>
          <% faves.forEach((fave) => { %>
          <li>
            <a href="/technologies/<%= fave.id %>">
            <%= fave.name %> - <%= fave.category_name %>
            </a>
          </li>
          <% }) %>
        </ul>
        </p>
      </li>
    </ul>
    <a href="/">Go Back to Home Page</a>
  </main>
</body>
</html>
