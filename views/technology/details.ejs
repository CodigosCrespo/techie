<% include ../partials/head.ejs %>
<main>
 <table>
    <tbody>
       <tr>
          <td>Name</td>
          <td><span><%= technology.name %></span></td>
        </tr>
        <tr>
          <td >Description:</td>
          <td><%= technology.description %></td>
        </tr>
        <tr>
          <td >Link to Docs:</td>
          <td><a href="<%= technology.documentation %>"><%= technology.documentation %></a></td>
        </tr>
        <tr>
          <td >See Example:</td>
          <td><a href="<%= technology.use_case %>"><%= technology.use_case %></a></td>
        </tr>
        <tr>
          <td >Category:</td>
          <td><%= technology.category_name %></td>
        </tr>
    </tbody>
  </table>

<% if (user !== undefined) { %>
  <form action="favorites" method="POST">
    <input style="display:none" value="<%= technology.id %>" name="tech_id">
    <button class="btn waves-effect waves-light" type="submit" name="action">Fave
      <i class="material-icons right">add</i>
    </button>
  </form>
  <button class="btn waves-effect waves-light">
    <a style="color: white" href='../reviews/<%= technology.id %>'>Review Tech
      <i class="material-icons right">add</i>
    </a>
  </button>
<% } %>

<a href="<%= '/technologies' %>">Back to Technologies List</a>
<div>
  <ul>
  <% reviews.forEach((review) => { %>
          <li>
            <h1><%= review.username %></h1>
            <p><%= review.title %> - <%= review.review_text %></p>
          </li>
          <% }) %>
  </ul>
</div>
</main>

