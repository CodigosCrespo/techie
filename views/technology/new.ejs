<% include ../partials/head.ejs %>

<body>
<main>
<h1 class="center">Add New Technology</h1>
<div class="row">
    <form action="/technologies" method="POST" class="col s12">
      <div class="row">
        <div class="input-field col s4">
          <label class="active">Name</label>
          <input type="text" name="name" />
        </div>
        <div class="input-field col s12">
          <select name="category_name">
            <option value="" disabled selected>Choose a category</option>
            <option value="Languages">Language</option>
            <option value="Libraries">Library</option>
            <option value="Frameworks">Framework</option>
            <option value="Styling">Styling</option>
            <option value="Modules_and_Components">Module/Component</option>
            <option value="Plugins">Plugin</option>
            <option value="APIs">API</option>
            <option value="Collaboration_Tools">Collaboration Tool</option>
            <option value="Text_Editors">Text Editor</option>
            <option value="Productivity">Productivity</option>
          </select>
          <label>Category</label>
  </div>
        <div class="input-field col s4">
          <label for="textarea1">Description</label><br/>
          <textarea id="textarea1" class="materialize-textarea" name="description"></textarea>
        </div>
        <div class="input-field col s4">
          <label for="textarea1">Link to Official Documentation</label><br/>
          <textarea id="textarea1" class="materialize-textarea" name="documentation"></textarea>
        </div>
        <div class="input-field col s4">
          <label for="textarea1">Use-Case of Technology</label><br/>
          <textarea id="textarea1" class="materialize-textarea" name="use_case"></textarea>
        </div>
        <div class="input-field col s4">
        <button class="btn waves-effect waves-light" type="submit" name="action" style="margin-bottom: 10px">Add Technology
        <i class="material-icons right">add</i>
        </button>
      </div>
      </div>
    </form>
  </div>
</main>
<script>
  $(document).ready(function() {
      $('select').material_select();
    });
</script>
</body>
