<% include ../partials/head.ejs %>
<body>
<% include ../partials/headeredit.ejs %>
<main>
<div class="container" style="margin-top: 40px">
<form action="<%= `/technologies/${tech.id}?_method=PUT` %>" method="POST">
  <div class="row">
        <div class="input-field col s6">
          <label class="active">Name</label>
          <input type="text" name="name" value="<%= tech.name %>" />
        </div>
        <div class="input-field col s6">
          <select name="category_name">
            <option disabled selected>Choose a category</option>
            <option value="Languages">Language</option>
            <option value="Libraries">Library</option>
            <option value="Frameworks">Framework</option>
            <option value="Styling">Styling</option>
            <option value="Modules_and_Components">Module/Component</option>
            <option value="Plugins">Plugin</option>
            <option value="APIs">API</option>
            <option value="Collaboration_Tools">Collaboration Tool</option>
            <option value="Text_Editors">Text Editor</option>
            <option value="Productivity">Productivity</option>
          </select>
          <label>Category</label>
        </div>
        <div class="input-field col s12">
          <label for="textarea1">Description</label><br/>
          <textarea id="textarea1" class="materialize-textarea" name="description"><%= tech.description %></textarea>
        </div>
        <div class="input-field col s6">
          <input type="text" class="materialize-textarea" name="documentation" value="<%= tech.documentation %>">
          <label for="documentation" class="active">Link to Official Documentation</label>
        </div>
        <div class="input-field col s6">
          <input type="text" class="materialize-textarea" name="use_case" value="<%= tech.use_case %>">
          <label for="use_case" class="active">Use-Case of Technology</label>
        </div>
        <div class="flexButtons input-field col s4">
        <button class="btn waves-effect waves-light" type="submit" value="update" style="margin-bottom: 10px">Update Technology
        <i class="material-icons right">add</i>
        </button>
        <div>
          <a class="btn waves-effect waves-light" href="../../technologies/<%= tech.id %>" style="margin-left: 10px">Cancel</a>
        </div>
        </div>
  </div>
</form>
</div>
</main>
<% include ../partials/jsdefaults.ejs %>
<script>
  $(document).ready(function() {
      $('select').material_select();
    });
</script>
</body>

